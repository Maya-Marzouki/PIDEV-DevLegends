{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<div class="row d-flex justify-content-center mt-4"> {# Centre le tableau horizontalement #}
    <div class="col-lg-10"> {# Réduit la largeur du tableau pour un meilleur centrage #}
        <div class="card">
            <div class="card-block text-center p-4"> {# Centre le texte dans la carte #}
                <h4 class="card-title">Liste des Articles de Conseils</h4>
                <h6 class="card-subtitle mb-3">Gestion des articles</h6>

                <form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="titre" class="form-control" placeholder="Rechercher par titre" value="{{ app.request.query.get('titre') }}">
        </div>
        <div class="col-md-4">
            <select name="categorie" class="form-control">
                <option value="">Toutes les catégories</option>
                <option value="Gestion du Stress et Bien-être Mental" {% if app.request.query.get('categorie') == 'Gestion du Stress et Bien-être Mental' %}selected{% endif %}>Gestion du Stress et Bien-être Mental</option>
                <option value="Sommeil et Santé Mentale" {% if app.request.query.get('categorie') == 'Sommeil et Santé Mentale' %}selected{% endif %}>Sommeil et Santé Mentale</option>
                <option value="santé" {% if app.request.query.get('categorie') == 'santé' %}selected{% endif %}>santé</option>
                <option value="Dépression" {% if app.request.query.get('categorie') == 'Dépression' %}selected{% endif %}>Dépression</option>

            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-secondary">Rechercher</button>
            <a href="{{ path('app_articles_conseils_admin') }}" class="btn btn-secondary">Réinitialiser</a>
        </div>
    </div>
</form>

                <div class="table-responsive">
                    <table class="table table-bordered text-center"> {# Centre le texte dans le tableau #}
                        <thead class="table-dark">
                            <tr>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th>Catégorie</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for article in articlesConseils %}
                                <tr>
                                    <td>{{ article.titreArticle }}</td>
                                    <td>{{ article.contenuArticle|slice(0, 100) }}...</td>
                                    <td>{{ article.categorieMentalArticle }}</td>
                                    <td>
                                        {% if article.image %}
                                            <img src="{{ asset(article.image) }}" alt="Image de l'article" width="100">
                                        {% else %}
                                            <span>Pas d'image</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_articles_conseils_edit', {'id': article.id}) }}" class="btn btn-secondary btn-sm">
                                            <i class="fa fa-edit"></i> Modifier
                                        </a>
                                        <form action="{{ path('app_articles_conseils_delete', {'id': article.id}) }}" method="post" class="d-inline"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                            <button type="submit" class="btn btn-secondary btn-sm">
                                                <i class="fa fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">Aucun article disponible.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
        {# Affichage de la pagination
        <div class="navigation">
            {{ knp_pagination_render(articlesConseils) }}
        </div> #}
            </div>
        </div>
                {# Bouton "Ajouter un Article" en bas à droite #}
                <style>
                    .btn-custom-green {
                        background-color: #28a745 !important; /* Vert Bootstrap */
                        color: white !important; /* Texte blanc */
                        font-weight: bold;
                    }
                </style>
                <div class="d-flex justify-content-end mt-3">
                    <a href="{{ path('app_articles_conseils_new') }}" class="btn btn-custom-green">Ajouter un Article</a>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <a href="{{ path('app_articles_conseils_index') }}" class="btn btn-custom-green">Retour à la liste des articles</a>
                </div>

    </div>
</div>
{% endblock %}
