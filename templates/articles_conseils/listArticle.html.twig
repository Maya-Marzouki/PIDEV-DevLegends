{% extends 'base.html.twig' %}

{% block title %}Nos Articles de Conseils{% endblock %}

{% block body %}
    <!-- Projects Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="fs-5 fw-bold text-primary">Nos Articles de Conseils</p>
                <h1 class="display-5 mb-5">Quelques-uns de nos articles intéressants</h1>
            </div>
            <div class="row g-4 portfolio-container">
                {% for article in articlesConseils %}
                    <div class="col-lg-4 col-md-6 portfolio-item wow fadeInUp" data-wow-delay="0.1s">
                        <div class="portfolio-inner rounded position-relative overflow-hidden">
                            <!-- Image -->
                            {% if article.image %}
                                <img class="img-fluid w-100" src="{{ asset(article.image) }}" alt="{{ article.titreArticle }}">
                            {% else %}
                                <img class="img-fluid w-100" src="https://via.placeholder.com/500x300" alt="Image non disponible">
                            {% endif %}

                            <!-- Titre affiché au survol -->
                            <div class="portfolio-hover d-flex align-items-center justify-content-center">
                                <h4 class="text-white text-center">{{ article.titreArticle }}</h4>
                            </div>

                            <!-- Bouton Voir déplacé plus bas -->
                            <div class="portfolio-text">
                                <div class="d-flex justify-content-center mt-4"> {# Ajout de mt-4 pour plus d'espace #}
                                    <a class="btn btn-lg-square rounded-circle mx-2" href="{{ path('app_articles_conseils_show', {'id': article.id}) }}" title="Voir l'article">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <style>
        /* Cacher le titre par défaut */
        .portfolio-hover {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        /* Afficher le titre au survol */
        .portfolio-inner:hover .portfolio-hover {
            opacity: 1;
        }

        /* Toujours afficher le bouton Voir et l'abaisser */
        .portfolio-text {
            position: relative;
            padding: 15px;
            text-align: center;
        }

        .portfolio-text .btn {
            margin-top: 90px; /* Ajout de marge pour abaisser le bouton */
        }
    </style>
{% endblock %}
