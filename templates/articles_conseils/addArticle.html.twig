{% extends 'baseAdmin.html.twig' %}

{% block title %}Ajouter un Nouvel Article{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg p-4">
                <h1 class="text-center mb-4">Ajouter un Nouvel Article de Conseil</h1>

                    {# Affichage des erreurs globales du formulaire #}
                    {% if form.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            <strong>Des erreurs sont survenues :</strong>
                            <ul>
                                {% for error in form.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.titreArticle, 'Titre de l\'Article', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titreArticle, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre de l\'article'}}) }}
                        <div class="text-danger">{{ form_errors(form.titreArticle) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.contenuArticle, 'Contenu de l\'Article', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.contenuArticle, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Entrez le contenu de l\'article'}}) }}
                        <div class="text-danger">{{ form_errors(form.contenuArticle) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.categorieMentalArticle, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.categorieMentalArticle, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">{{ form_errors(form.categorieMentalArticle) }}
                    </div>

                    <!-- Champ pour l'URL de l'image -->
                    <div class="mb-3">
                        {{ form_label(form.image, 'URL de l\'Image', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'https://example.com/image.jpg', 'oninput': 'updatePreview()'}}) }}
                        <div class="text-danger">{{ form_errors(form.image) }}
                    </div>

                    <!-- Prévisualisation de l'image -->
                    <div class="mb-3 text-center">
                        <img id="imagePreview" src="https://via.placeholder.com/500x300?text=Aperçu+de+l'image" class="img-fluid rounded shadow" alt="Aperçu de l'image" style="max-width: 300px;">
                    </div>

                        {# Bouton "Ajouter une Question" en bas à droite #}
                        <style>
                            .btn-custom-green {
                                background-color: #28a745 !important; /* Vert Bootstrap */
                                color: white !important; /* Texte blanc */
                                font-weight: bold;
                            }

                            .alert-danger {
                                color: red;
                                font-weight: bold;
                            }
                        </style>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_articles_conseils_admin') }}" class="btn btn-custom-green py-3 px-4">Voir la liste des articles</a>
                        <button type="submit" class="btn btn-custom-green py-3 px-4">Ajouter l'Article</button>
                        {# <a href="{{ path('app_articles_conseils_admin') }}" class="btn btn-secondary">Voir la liste des articles</a> #}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<!-- JavaScript pour mettre à jour l'aperçu de l'image -->
<script>
    function updatePreview() {
        let image = document.querySelector("input[name='image']").value;
        let preview = document.getElementById("imagePreview");
        preview.src = image || "https://via.placeholder.com/500x300?text=Aperçu+de+l'image";
    }
</script>
{% endblock %}
