{# templates/admin/quiz/list.html.twig #}

{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des Quiz{% endblock %}

{% block body %}
<div class="row d-flex justify-content-center mt-4"> {# Centre le tableau horizontalement #}
    <div class="col-lg-10"> {# Réduit la largeur du tableau pour un meilleur centrage #}
        <div class="card">
            <div class="card-block text-center p-4"> {# Centre le texte dans la carte #}
                <h4 class="card-title">Liste des Quiz</h4>
                <h6 class="card-subtitle mb-3">Gestion des quiz</h6>

                {# Barre de recherche manuelle #}
                <div class="mb-4 text-left"> {# Aligner à gauche #}
                    <form action="{{ path('quiz_list_admin') }}" method="GET" class="form-inline">
                        <input
                            type="text"
                            name="q"
                            value="{{ searchQuery }}"
                            class="form-control mr-2"
                            placeholder="Rechercher un quiz..."
                        >
                        <button type="submit" class="btn btn-secondary ml-2">Rechercher</button>
                        <a href="{{ path('quiz_list_admin') }}" class="btn btn-secondary ml-2">Réinitialiser</a>
                    </form>
                </div>

                {# Nombre de résultats #}
                <div class="text-left mb-3"> {# Aligner à gauche #}
                    {% if quizzes|length > 0 %}
                        <p>Nombre de résultats : {{ quizzes|length }}</p>
                    {% else %}
                        <p>Aucun résultat trouvé.</p>
                    {% endif %}
                </div>

                {# Tableau des quiz #}
                <div class="table-responsive">
                    <table class="table table-bordered text-center"> {# Centre le texte dans le tableau #}
                        <thead class="table-dark">
                            <tr>
                                <th>
                                    <a href="{{ path('quiz_list_admin', {'sort_by': 'id', 'order': sort_by == 'id' and order == 'asc' ? 'desc' : 'asc', 'q': searchQuery}) }}">
                                        ID {% if sort_by == 'id' %}({{ order == 'asc' ? '▲' : '▼' }}){% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ path('quiz_list_admin', {'sort_by': 'score', 'order': sort_by == 'score' and order == 'asc' ? 'desc' : 'asc', 'q': searchQuery}) }}">
                                        Score {% if sort_by == 'score' %}({{ order == 'asc' ? '▲' : '▼' }}){% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ path('quiz_list_admin', {'sort_by': 'etatMental', 'order': sort_by == 'etatMental' and order == 'asc' ? 'desc' : 'asc', 'q': searchQuery}) }}">
                                        État Mental {% if sort_by == 'etatMental' %}({{ order == 'asc' ? '▲' : '▼' }}){% endif %}
                                    </a>
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for quiz in quizzes %}
                                <tr>
                                    <td>{{ quiz.id }}</td>
                                    <td>{{ quiz.score }}</td>
                                    <td>{{ quiz.etatMental }}</td>
                                    <td>
                                        <a href="{{ path('quiz_show', {'id': quiz.id}) }}" class="btn btn-secondary btn-sm">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        <form action="{{ path('quiz_delete', {'id': quiz.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce quiz ?');">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                            <button type="submit" class="btn btn-secondary btn-sm">
                                                <i class="fas fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucun quiz disponible.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Boutons en bas à droite #}
        <div class="d-flex justify-content-end mt-3">
            <a href="{{ path('quiz_start') }}" class="btn btn-custom-green mr-2">Démarrer un Quiz</a>
            <a href="{{ path('admin_statistiques') }}" class="btn btn-custom-green">Voir les Statistiques</a>
        </div>
    </div>
</div>

{# Styles personnalisés #}
<style>
    .btn-custom-green {
        background-color: #28a745 !important; /* Vert Bootstrap */
        color: white !important; /* Texte blanc */
        font-weight: bold;
    }
</style>
{% endblock %}