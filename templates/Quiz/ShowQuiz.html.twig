{% extends 'base.html.twig' %}

{% block title %}Détails du Quiz #{{ quiz.id }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1>Détails du Quiz #{{ quiz.id }}</h1>
    <div class="card shadow-lg rounded">
        <div class="card-body">
            <h2>Score : {{ quiz.score }}</h2>
            <p>État mental : {{ quiz.etatMental }}</p>
            {% if imageUrl %}
                <img src="{{ imageUrl }}" class="img-fluid" alt="Illustration de l'état mental">
            {% else %}
                <p>Pas d'image disponible pour ce quiz.</p>
            {% endif %}
        </div>
    </div>
    <a href="{{ path('quiz_list') }}" class="btn btn-primary mt-3">Retour à la liste</a>
</div>
{% endblock %}
