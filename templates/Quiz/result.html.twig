{% extends 'base.html.twig' %}

{% block title %}Résultat du quiz{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Centrage parfait */
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f6f9;
        }

        /* Conteneur principal */
        .result-container {
            width: 90%;
            max-width: 500px;
            padding: 30px;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .result-score {
            font-size: 22px;
            font-weight: bold;
            color: #333;
            margin-bottom: 15px;
        }

        .result-state {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .result-recommendation {
            font-size: 16px;
            color: #555;
            margin-bottom: 20px;
        }

        .btn-quiz {
            display: inline-block;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background: #007bff;
            border-radius: 8px;
            text-decoration: none;
            transition: 0.3s ease-in-out;
            argin-top: 20px; /* Espacement par rapport au contenu */
        }

        .btn-quiz:hover {
            background: #0056b3;
            transform: translateY(-2px); /* Effet de survol */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Ombre au survol */
        }

        /* Couleurs et icônes */
        .good-mental-health { color: #28a745; }
        .mild-fatigue { color: #17a2b8; }
        .stress-anxiety { color: #ffc107; }
        .moderate-depression { color: #fd7e14; }
        .severe-mental-state { color: #dc3545; }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded text-center">
                {% if imageUrl %}
                    <img src="{{ imageUrl }}" class="card-img-top" alt="Illustration de votre état mental">
                {% else %}
                    <p>Pas d'image disponible pour cette condition.</p>
                {% endif %}
                <div class="card-body">
                    <h2>Votre score : {{ score }}</h2>
                    <p>État mental : {{ etatMental }}</p>
                </div>
            </div>
            <!-- Bouton de retour centré sous la carte -->
            <div class="text-center mt-4">
                <a href="{{ path('quiz_list') }}" class="btn-quiz">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
