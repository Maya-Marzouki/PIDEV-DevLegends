{% extends 'baseAdmin.html.twig' %}
{% block title %}Users List{% endblock %}
{# {% if userList is defined and userList is not empty%} #}
{% block body %}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor">Users List</h3>      
        </div>                
    </div>
</div>
<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
			    <h4 class="card-title">Basic Table</h4>
                    <h6 class="card-subtitle">Add class <code>.table</code></h6>
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
									<th>ID</th>
									<th>FIRST NAME</th>
									<th>LAST NAME</th>
									<th>EMAIL</th>
									<th>PASSWORD</th>
									<th>ROLE</th>
									<th>AGE</th>
									<th>PROFILE PICTURE</th>
									<th>ACTIONS</th>
								</tr>
								{% for user in userList %}
								<tr>
								<td>{{user.id}}</td>
								<td>{{user.firstName}}</td>
        						<td>{{user.lastName}}</td>
								<td>{{user.userEmail}}</td>
        						<td>{{user.pswrd}}</td>
								<td>{{user.userRole}}</td>
            					<td>{{user.userAge}}</td>
								<td>{{asset('images/' ~ user.userPicture)}}</td>
								<td>
									<a class="text-themecolor" href="{{path('updateAdmin',{'id':user.id})}}">Edit</a>
									<a class="text-themecolor" href="{{path('deleteUser',{'id':user.id})}}">Delete</a>
								</td>
								</tr>
								{% endfor %}      
                        	</table>
                		</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}