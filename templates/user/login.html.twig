{# templates/user/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Connexion</h1>

        {# Afficher les messages d'erreur si la variable `error` existe #}
        {% if error is defined and error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

        {# Formulaire de connexion #}
        <form method="post" class="form">
            <div class="form-group">
                <label for="userEmail">Email</label>
                <input type="email" id="userEmail" name="userEmail" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>

        {# Lien vers la page d'inscription #}
        <p class="mt-3">
            Vous n'avez pas de compte ? <a href="{{ path('insertUser') }}">Inscrivez-vous ici</a>.
        </p>
    </div>
{% endblock %}