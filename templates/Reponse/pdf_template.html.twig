{# templates/reponse/pdf_template.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Liste des Réponses</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Liste des Réponses</h1>
    <table>
        <thead>
            <tr>
                <th>Réponse</th>
                <th>Score</th>
                <th>Question</th>
            </tr>
        </thead>
        <tbody>
            {% for reponse in reponses %}
                <tr>
                    <td>{{ reponse.answerText }}</td>
                    <td>{{ reponse.score }}</td>
                    <td>{{ reponse.question.questionText }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune réponse disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>