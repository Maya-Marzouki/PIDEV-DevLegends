{% extends 'base.html.twig' %}

{% block title %}Liste des Réponses{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-5">Liste des Réponses</h1>
        </div>

        <div class="bg-light rounded p-4 p-sm-5 wow fadeInUp" data-wow-delay="0.1s">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Réponse</th>
                        <th>Score</th>
                        <th>Question</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reponse in reponses %}
                        <tr>
                            <td>{{ reponse.answerText }}</td>
                            <td>{{ reponse.score }}</td>
                            <td>{{ reponse.question.questionText }}</td>
                            <td>
                                <a href="{{ path('reponse_edit', {'id': reponse.id}) }}" class="btn btn-succes">Modifier</a>
                                <form action="{{ path('reponse_delete', {'id': reponse.id}) }}" method="POST" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_reponse') }}">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?');">supprimer</button>
                                </form>
                                {# <a href="{{ path('reponse_delete', {'id': reponse.id}) }}" class="btn btn-succes" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse ?')">Supprimer</a> #}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-3">
                <a href="{{ path('reponse_new') }}" class="btn btn-success py-3 px-4">Ajouter une Réponse</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <style>
        .action-btn {
            text-decoration: none;
            font-weight: bold;
            padding: 0.375rem 0.75rem; /* Custom padding to make the buttons consistent */
            border-radius: 0.375rem;
        }

        .action-btn:hover {
            text-decoration: underline;
            color: blue !important;
            border-color: blue;
        }
    </style>
{% endblock %}
