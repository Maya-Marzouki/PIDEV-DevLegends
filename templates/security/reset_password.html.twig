{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h2 class="card-title text-center">Réinitialisation du mot de passe</h2>
                <form action="{{ path('password_reset') }}" method="POST">
                    <input type="hidden" name="numTel" value="{{ numTel }}">
                    <input type="hidden" name="resetCode" value="{{ resetCode }}">

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Nouveau mot de passe</label>
                        <input type="password" id="newPassword" name="newPassword" class="form-control" required>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Réinitialiser le mot de passe</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
