{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h2 class="card-title text-center">Réinitialisation du mot de passe</h2>
                <form action="{{ path('password_request') }}" method="POST">
                    <div class="mb-3">
                        <label for="numTel" class="form-label">Numéro de téléphone</label>
                        <input type="text" id="numTel" name="numTel" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Envoyer le code</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
