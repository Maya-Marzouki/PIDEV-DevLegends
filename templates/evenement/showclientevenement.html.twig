{% extends 'base.html.twig' %}

{% block title %} Liste des Evenements {% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Nos Événements</h1>

    <table class="table table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th>Titre Evenement</th>
                <th>Date Evenement</th>
                <th>Lieu Evenement</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td>{{ evenement.titreEvent }}</td>
                    <td>{{ evenement.dateEvent|date('Y-m-d') }}</td>
                    <td>{{ evenement.lieuEvent }}</td>
                    <td>{{ evenement.statutEvent }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun Evenement trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Section avec des événements -->
<div class="container mt-5">
    <h2 class="text-center">Nos evenements de Psychothérapie</h2>

    <div class="row mt-4">
        <div class="col-lg-4 text-center">
            <h4 class="mb-3">Retraite de Bien-être Psychologique</h4>
            <p class="text-muted">Un week-end pour se ressourcer et reconnecter avec soi-même.</p>
            <div class="image-container">
                <img src="{{ asset('events\images1.jpg') }}" 
                     class="img-fluid rounded shadow" 
                     alt="Retraite de Bien-être Psychologique"
                     rel="icon">
            </div>
        </div>
        <div class="col-lg-4 text-center">
            <h4 class="mb-3">Atelier de Prise de Parole en Public</h4>
            <p class="text-muted">Surmontez vos peurs et gagnez en confiance pour prendre la parole.</p>
            <div class="image-container">
                <img src="{{ asset('events\mm.jpeg') }}" 
                     class="img-fluid rounded shadow" 
                     alt="Atelier de Prise de Parole en Public"
                     rel="icon">
            </div>
        </div>
        <div class="col-lg-4 text-center">
            <h4 class="mb-3">Atelier de Relaxation et Méditation</h4>
            <p class="text-muted">Améliorer votre bien-être mental à travers la relaxation.</p>
            <div class="image-container">
                <img src="{{ asset('events\images3.JPEG') }}" 
                     class="img-fluid rounded shadow" 
                     rel="icon"
                     alt="Atelier de Relaxation et Méditation">
            </div>
        </div>
    </div>
</div>

<style>
    .image-container {
        position: relative;
        width: 100%;
        height: 250px;
        overflow: hidden;
    }

    .image-container img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        transition: transform 0.3s ease;
    }

    .image-container:hover img {
        transform: scale(1.1);
    }

    .table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 10px;
        border: 1px solid #ddd;
    }

    .table thead {
        background-color: #556B2F; 
        color: white;
    }

    h1, h2 {
        color: #556B2F;
    }

    .table-bordered {
        border: 2px solid #556B2F;
    }
</style>

{% endblock %}
