{% extends 'base.html.twig' %}

{% block title %}Liste des Centres pour les Clients{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center text-success mb-4">Nos Centres</h1>

    {# Formulaire de recherche et de tri #}
    <form method="get" action="{{ path('centreclient') }}" class="mb-4" id="searchForm">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Rechercher par nom..." value="{{ app.request.query.get('search') }}">
            <select name="order" class="form-control form-control-sm" id="orderSelect" style="max-width: 150px;"> <!-- Menu déroulant compact -->
                <option value="">-- Trier par --</option>
                <option value="asc" {% if app.request.query.get('order') == 'asc' %}selected{% endif %}>A-Z</option>
                <option value="desc" {% if app.request.query.get('order') == 'desc' %}selected{% endif %}>Z-A</option>
            </select>
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">Rechercher</button> <!-- Bouton de taille normale -->
            </div>
        </div>
    </form>

    {# Affichage des centres #}
    <div class="row">
        {% for centre in centres %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0 h-100 d-flex flex-column">
                    {% if centre.photoCentre %}
                        <img src="{{ centre.photoCentre }}" class="card-img-top" alt="Photo du centre">
                    {% else %}
                        <div class="text-center p-3 text-muted">Pas d'image</div>
                    {% endif %}
                    <div class="card-body d-flex flex-column flex-grow-1 text-center">
                        <h5 class="card-title text-success">{{ centre.nomCentre }}</h5>
                        <p class="card-text"><strong>Adresse:</strong> {{ centre.adresseCentre }}</p>
                        <p class="card-text"><strong>Téléphone:</strong> {{ centre.telCentre }}</p>
                        <p class="card-text"><strong>Email:</strong> {{ centre.emailCentre }}</p>
                        <p class="card-text"><strong>Spécialité:</strong> {{ centre.specialiteCentre }}</p>
                        <p class="card-text"><strong>Capacité:</strong> {{ centre.capaciteCentre }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center text-muted">
                <p>Aucun centre trouvé.</p>
            </div>
        {% endfor %}
    </div>

    {# Pagination #}
    <div class="pagination-container mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{ knp_pagination_render(centres) }}
            </ul>
        </nav>
    </div>
</div>

{# Script JavaScript pour soumettre automatiquement le formulaire de tri #}
<script>
    document.getElementById('orderSelect').addEventListener('change', function() {
        document.getElementById('searchForm').submit();
    });
</script>
{% endblock %}