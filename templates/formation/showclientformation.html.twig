{% extends 'base.html.twig' %}

{% block title %} Liste des formations {% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Liste des formations</h1>

    <table class="table table-bordered text-center">
        <thead class="thead-dark">
            <tr>
                <th>Titre Formation</th>
                <th>Date Formation</th>
                <th>Lieu Formation</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
                <tr>
                    <td>{{ formation.titreFor }}</td>
                    <td>{{ formation.dateFor|date('Y-m-d') }}</td>
                    <td>{{ formation.lieuFor }}</td>
                    <td>{{ formation.statutFor }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune Formation trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Section avec des images simples sur la psychothérapie -->
<div class="container mt-5">
    <h2 class="text-center">Psychothérapie et Bien-être</h2>

    <div class="row mt-4">
        <div class="col-lg-4 text-center">
            <h4 class="mb-3">Consultation en Psychothérapie</h4>
            <div class="image-container">
                <img src="{{ asset('images/consultation-psychotherapie.jpg') }}" 
                     class="img-fluid rounded shadow" 
                     alt="Consultation en psychothérapie">
            </div>
        </div>
        <div class="col-lg-4 text-center">
            <h4 class="mb-3">Exercices de Relaxation</h4>
            <div class="image-container">
                <img src="{{ asset('images/exercices-relaxation.jpg') }}" 
                     class="img-fluid rounded shadow" 
                     alt="Exercice de relaxation et respiration">
            </div>
        </div>
        <div class="col-lg-4 text-center">
            <h4 class="mb-3">Soutien Psychologique</h4>
            <div class="image-container">
                <img src="{{ asset('images/soutien-psychologique.jpg') }}" 
                     class="img-fluid rounded shadow" 
                     alt="Soutien psychologique">
            </div>
        </div>
    </div>
</div>

<!-- Ajout de styles pour animations et personnalisation -->
<style>
    .image-container {
        position: relative;
        width: 100%;
        height: 250px;
        overflow: hidden;
    }

    .image-container img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        transition: transform 0.3s ease;
    }

    .image-container:hover img {
        transform: scale(1.1);
    }

    .table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 10px;
        border: 1px solid #ddd;
    }

    .table thead {
        background-color: #556B2F; /* Vert olive foncé */
        color: white;
    }

    h1, h2 {
        color: #556B2F;
    }

    .table-bordered {
        border: 2px solid #556B2F;
    }
</style>

{% endblock %}
